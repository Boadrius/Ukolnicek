@model IEnumerable<Ukolnicek.Models.Ukol>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Seznam úkolů</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Ukol" asp-action="Create" class="btn btn-primary">
                Nový úkol
            </a>
        </div>
    </div>

    <br /> <br />
    <table class="table table-bordered table-striped"style="width:100%">
            <thead>
                <tr>
                    <th>
                        Název úkolu
                    </th>
                    <th>
                        Druh práce
                    </th>
                    <th>
                        Začátek
                    </th>
                    <th>
                        Konec
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.NazevUkolu</td>
                        <td width="20%">@obj.DruhPrace</td>
                        <td width="20%">@obj.CasOd</td>
                        <td width="20%">@obj.CasDo</td>
                        <td class="text-center">
                            <a asp-controller="Ukol" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary">
                                <i class="far fa-edit"></i>
                            </a>
                            <a asp-controller="Ukol" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

</div>

