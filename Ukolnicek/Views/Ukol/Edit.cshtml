@model Ukolnicek.Models.Ukol

<form method="post" asp-action="Edit">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Nový úkol</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="NazevUkolu"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="NazevUkolu" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="DruhPrace"></label>
                    </div>
                    <div class="col-6">
                        <select class="form-select" aria-label="Default select example" asp-for=DruhPrace>
                                <option value="0">Druh práce:</option>
                                <option value="Kódování">Kódování</option>
                                <option value="Programování">Programování</option>
                                <option value="Meetingy">Meetingy</option>
                                <option value="Školení">Školení</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="CasDo"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="CasDo">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="CasOd"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="CasOd">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Zpět</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>